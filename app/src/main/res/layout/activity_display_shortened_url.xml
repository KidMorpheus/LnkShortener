<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/mainFrame"
    android:layout_height="match_parent"
    tools:context="de.hirtenstrasse.michael.lnkshortener.MainFragment">


    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/Theme.AppCompat"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@mipmap/ic_image"
            android:id="@+id/imageViewQrCode"
            android:visibility="gone"/>

    <TextView
        android:text="1n.pm/"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewShortenedLink"
        android:textSize="32sp"
        android:textIsSelectable="true"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="gone"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:ellipsize="middle"
        android:fadeScrollbars="false"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        tools:scrollbarAlwaysDrawVerticalTrack="false" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/shareButton"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_share_black_24dp"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:textAlignment="center"
            android:onClick="shareLink"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/openLinkButton"
            app:srcCompat="@drawable/ic_language_black_24dp"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:layout_marginLeft="23dp"
            android:onClick="openLink"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/copyLinkButton"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_content_copy_black_24dp"
            android:visibility="gone"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:layout_marginLeft="23dp"
            android:onClick="copyLink"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/qrCodeButton"
            app:srcCompat="@drawable/ic_qrcode"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:textSize="48sp"
            android:textStyle="normal|bold"
            android:layout_marginLeft="23dp"
            android:onClick="showQRCode"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:layout_weight="1" />

    </LinearLayout>

    </LinearLayout>



</FrameLayout>